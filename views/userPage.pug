html
    head
        title Users

    body
        div
            table(border=1)
                each user in users
                    td
                        p= user.full_name
                        p= user.age
                        p= user.email
                        form(action=`/removeUser/${user.id}`, method="post")
                            button(type="submit") Delete
                        a(href='/edit/' + user.full_name)
                            button Edit

        a(href="/") Add Another Student